function pre {
	get_ntpdate
	check_if_partitioned
	remove_all_partitions
	create_one_partition ext2
	mount_partition "-t ext2"
}

function post {
	umount_partition
}

function download_and_install {
	curl -k https://images.solid-build.xyz/IMX6/Debian/sr-imx6-debian-buster-20191020-cli.tar.xz | /usr/bin/tar -Jx -C $ROOTFS_DIR
}

pre
download_and_install
post

