function pre {
	get_ntpdate
	check_if_partitioned
	remove_all_partitions
	create_one_partition ext2
	mount_partition "-t ext2"
}

function post {
	umount_partition
}

function download_and_install {
	curl -k http://os.archlinuxarm.org/os/ArchLinuxARM-imx6-cubox-latest.tar.gz | /usr/bin/tar -xvf -C $ROOTFS_DIR
}

pre
download_and_install
post

